<div class="post">
	<h2 class="title">
		<%= link_to post.title, post_path(post) %>
	</h2>
	<div class="content">
		<%= raw post.content %>
	</div>
	<% if current_user %>
		<div class="controls">
			<span><%= link_to 'Edit', edit_post_path(post)%></span>
			<span>
				<%= link_to 'Delete', post,
		               :confirm => 'Are you sure you want to delete this post forever?',
		               :method => :delete %>
	    </span>
		</div>
	<% end %>
</div>