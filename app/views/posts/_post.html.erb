<div class="post">
	<h2 class="title">
		<%= link_to post.title, post_path(post) %>
	</h2>
	<div class="content">
		<%= raw post.content %>
	</div>
	<div class=<%="date"%>>
		<%= post.created_at.strftime("Posted on %B %d, %Y at %I:%M %p") %>
	</div>
	<%= render :partial => "partials/share", :locals => {:post => post}%>
	<% if current_user %>
		<div class="controls">
			<span><%= link_to 'Edit', edit_post_path(post), :class => "button" %></span>
			<span>
				<%= link_to 'Delete Post', post,
		               :confirm => 'Are you sure you want to delete this post forever?',
		               :method => :delete, :class => "negative button" %>
	    </span>
		</div>
	<% end %>
</div>