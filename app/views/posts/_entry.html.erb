<div class="entry">
	<%= render :partial => "post", :locals => {:style_class => "entry", :post => entry}%>
	<div class=<%="date"%>>
		<%= entry.created_at.strftime("Posted on %m/%d/%Y at %I:%M | ") %>
	</div>
	<div class="entry-comments">
		<%= link_to ("Comments (" + entry.comments.size.to_s + ")"), post_path(entry) %>
	</div>
</div>