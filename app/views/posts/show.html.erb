<%= render :partial => @post %>
<div class=<%="date"%>>
	<%= @post.created_at.strftime("Posted on %B %d, %Y at %I:%M %p") %>
</div>
<h3 class="comments-header">Comments</h3>
<div class="comments">
	<%= render :partial => @post.comments %>
</div>
<div class="reply">
	<h3 class="reply-title">Post a comment...</h3>
	<div class="reply-form">
		<%= form_for([@post, @post.comments.build]) do |form| %>
		<%= render(:partial => "partials/errors", :locals => {:item => @comment}) %>
			<dl>
				<dt>
					<%= form.label :Name %>
				</dt>
				<dd>
					<%= form.text_field :author %>
				</dd>
				<dt>
					<%= form.label :Website %>
				</dt>
				<dd>
					<%= form.url_field :webpage %>
				</dd>
				<dt>
					<%= form.label :Email%>
				</dt>
				<dd>
					<%= form.email_field :email%>
					<span class="email-explanation">Will not be shown, only used to display gravatar.</span>
				</dd>
				<dt>
					<%= form.label :Comment%>
				</dt>
				<dd>
					<%= form.text_area :content, :rows => 10, :cols => 24%>
				</dd>
				<p class="submit">
					<%= form.submit "Post this comment" %>
				</p>
			</dl>
		<% end %>
	</div>
</div>